{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for MERN RBAC application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:nodemon": "nodemon --exec ts-node src/index.ts --watch src --ext ts,js,json",
    "start": "node dist/index.js",
    "seed": "ts-node src/scripts/seed.ts",
    "seed-data": "ts-node src/scripts/seedData.ts",
    "add-products": "ts-node src/scripts/addProducts.ts",
    "add-more-products": "ts-node src/scripts/addMoreProducts.ts",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@types/ejs": "^3.1.5",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.1",
    "@types/stripe": "^8.0.416",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "socket.io": "^4.7.4",
    "stripe": "^18.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20.10.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.43.0"
  }
}
